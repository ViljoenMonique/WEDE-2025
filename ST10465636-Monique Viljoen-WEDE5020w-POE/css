        height: auto; /* Allow dynamic height on mobile */
    }

    .rotatable-block {
        position: relative; /* Stack vertically on mobile instead of rotating */
        transform: none !important; /* Disable rotation on small screens */
    }

    .rotatable-block:not(.active) {
        display: none; /* Hide inactive block; use JS for toggle if needed */
    }

    /* Disable 3D hover on mobile (touch devices) */
    .team-member:hover {
        transform: none; /* No lift/tilt on small screens */
        box-shadow: 0 4px 10px rgba(249, 168, 37, 0.2); 
    }

    /* Disable 3D hover for blocks on mobile */
